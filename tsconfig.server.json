{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "baseUrl": "./",
    "paths": {
      "@/*": ["server/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "src", "dist"]
}